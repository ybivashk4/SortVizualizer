<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SortVizualizer.MainPage"
             xmlns:y="clr-namespace:SortVizualizer"
             x:DataType="y:Vizualizer_ViewModel">
    <StackLayout Padding="20">
        <Label Text="Select Sort Algorithm" 
               FontSize="24" 
               HorizontalOptions="Center" />

        <Picker Title="Sort Algorithms">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:Int32}">
                    <x:Int32>1</x:Int32>
                    <!-- Bubble Sort -->
                    <!-- Вы можете добавить другие алгоритмы сортировки здесь -->
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button Text="Sort"
                Command="{Binding PickSort}" 
                CommandParameter="{Binding Source={x:Reference SortPicker}, Path=SelectedItem}" />

        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Value}" 
                           FontSize="18" 
                           HorizontalOptions="Center" 
                           VerticalOptions="CenterAndExpand" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>